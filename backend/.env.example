# =========================
# 資料庫設定
# =========================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/stock_analysis
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =========================
# Redis 設定
# =========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5
REDIS_DEFAULT_TTL=1800
REDIS_STOCK_LIST_TTL=1800
REDIS_PRICE_DATA_TTL=600

# 若仍需要單一 URL，也可同時提供（供舊程式使用）
REDIS_URL=redis://redis:6379/0

# =========================
# 安全 / JWT 設定
# =========================
SECURITY_SECRET_KEY=your-secret-key-change-in-production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_CORS_ORIGINS=["http://localhost:3000"]
SECURITY_CORS_CREDENTIALS=true

# =========================
# 應用程式設定
# =========================
APP_NAME=股票分析平台
APP_VERSION=1.0.0
APP_DEBUG=true
APP_ENVIRONMENT=development
APP_API_V1_PREFIX=/api/v1
APP_DOCS_URL=/docs
APP_REDOC_URL=/redoc
APP_DEFAULT_STOCK_LIMIT=100
APP_MAX_STOCK_LIMIT=1000
APP_DEFAULT_INDICATOR_PERIOD=14
APP_MAX_INDICATOR_DAYS=365

# =========================
# 外部 API 設定
# =========================
# 價格數據源配置 (yahoo_finance, alpha_vantage, fmp)
EXTERNAL_API_PRICE_DATA_SOURCE=yahoo_finance

EXTERNAL_API_YAHOO_FINANCE_TIMEOUT=30
EXTERNAL_API_YAHOO_FINANCE_RETRIES=3
EXTERNAL_API_RATE_LIMIT_REQUESTS=100
EXTERNAL_API_RATE_LIMIT_PERIOD=60

# =========================
# 日誌設定
# =========================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5