# ==========================================
# Backend Configuration
# ==========================================

# Database Config
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stock_analysis

# Redis Config
REDIS_URL=redis://localhost:6379

# JWT Config
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Config
PROJECT_NAME=股票分析平台
VERSION=1.0.0
DEBUG=true

# CORS Config
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# 價格數據源配置
# 可選值: yahoo_finance, alpha_vantage, fmp (Financial Modeling Prep)
PRICE_DATA_SOURCE=yahoo_finance

# Yahoo Finance API 配置
YAHOO_FINANCE_TIMEOUT=30
YAHOO_FINANCE_RETRY_COUNT=3

# 快取配置
CACHE_EXPIRE_SECONDS=1800

# 日誌配置
LOG_LEVEL=INFO

# ==========================================
# Frontend Configuration
# ==========================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="股票分析平台"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_HOTJAR_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_CHARTS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Performance
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000

# Development
ANALYZE=false
NEXT_PUBLIC_DEBUG=false

# Security
NEXT_PUBLIC_CSP_NONCE=
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=1000
NEXT_PUBLIC_API_RATE_WINDOW=60000

# ==========================================
# Airflow Configuration
# ==========================================

# Airflow core configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://airflow:airflow@postgres:5432/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__DEFAULT_TIMEZONE=Asia/Taipei
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=true
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# Airflow 安全配置
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here-32-chars-long
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here
FERNET_KEY=your-fernet-key-here

# Airflow Backend API 配置
BACKEND_API_URL=http://localhost:8000

# Airflow 用戶配置
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin