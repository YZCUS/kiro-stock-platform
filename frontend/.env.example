# Environment Configuration Example

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="股票分析平台"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Authentication (if implemented)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database (if needed for frontend)
DATABASE_URL=postgresql://user:password@localhost:5432/stock_analysis

# Redis (if needed for frontend caching)
REDIS_URL=redis://localhost:6379

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_HOTJAR_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_CHARTS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Performance
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000

# Development
ANALYZE=false
NEXT_PUBLIC_DEBUG=false

# Security
NEXT_PUBLIC_CSP_NONCE=
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=1000
NEXT_PUBLIC_API_RATE_WINDOW=60000